--1 -INNER JOIN query to see city (city) and country (country) names together from the city table and the country table:

SELECT city.city, country.country
FROM city
INNER JOIN country ON city.country_id = country.country_id;

-- 2- INNER JOIN query to see payment_id along with first_name and last_name from the customer table and the payment table:

SELECT payment.payment_id, customer.first_name, customer.last_name
FROM customer
INNER JOIN payment ON customer.customer_id = payment.customer_id;


--3 - INNER JOIN query to see rental_id along with first_name and last_name from the customer table and the rental table:

SELECT rental.rental_id, customer.first_name, customer.last_name
FROM customer
INNER JOIN rental ON customer.customer_id = rental.customer_id;
